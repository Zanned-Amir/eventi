<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Tickets</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

<div class="px-4 py-2 text-gray-800">
  <% tickets.forEach(ticket => { %>
    <!-- Desktop Layout -->
    <div class="hidden xl:flex flex-row justify-between shadow-md border rounded-md mb-6"> <!-- Increased margin-bottom -->
      <div class="flex flex-col items-center justify-between w-1/4 px-4 py-2 bg-white border-r-2 border-gray-500 border-dashed rounded-l-md">
        <!-- QR Code and Validity -->
        <div class="flex-col">
          <img src="<%= ticket.qrCodeUrl %>" />
          <p class="my-2 text-xs italic font-light text-gray-500">Scan here to check in!</p>
          <div class="text-xs mb-2 text-gray-600">
            <span class="text-gray-500">Valid until :</span><br />
            <%= ticket.validUntil %>
          </div>
        </div>
      </div>
      <div class="relative flex flex-col w-3/4">
        <img src="<%= ticket.imageUrl %>" />
        <div class="absolute self-end mr-1 mt-1">
          <!-- Ticket Number -->
          <p class="px-4 py-2 text-xs font-bold text-red-800 bg-white rounded-md">
            <span class="font-normal text-gray-500">Ticket Number :</span> <%= ticket.ticketNumber %>
          </p>
        </div>
        <!-- Category and Concert Name -->
        <div class="absolute top-2 left-4 bg-white p-2 rounded-md shadow-md text-xs font-bold text-red-800">
          <p class="font-normal text-gray-500">Category :</p>
          <p><%= ticket.category %></p>
          <p class="font-normal text-gray-500 mt-1">Concert Name :</p>
          <p><%= ticket.eventName %></p>
        </div>
        <!-- Event Details -->
        <div class="absolute bottom-0 flex flex-col w-full h-24">
          <div class="w-full h-full bg-white opacity-75 rounded-br-md"></div>
          <div class="absolute flex flex-row p-2 text-gray-800 opacity-100">
            <div class="flex flex-col">
              <div class="flex flex-col">
                <p class="mb-1 text-xs text-gray-500">Start Date :</p>
                <p class="text-xs font-semibold text-red-800"><%= ticket.startDate %></p>
              </div>
              <div class="hidden md:flex flex-col mt-1">
                <p class="mb-1 text-xs text-gray-500">End Date :</p>
                <p class="text-xs font-semibold text-red-800"><%= ticket.endDate %></p>
              </div>
            </div>
            <div class="flex flex-col ml-4">
              <div class="flex flex-col mt-1">
                <p class="mb-1 text-xs text-gray-500">Location :</p>
                <p class="text-xs font-semibold text-red-800"><%= ticket.location %></p>
              </div>
            </div>
            <% if (ticket.owner) { %>
            <div class="flex flex-col ml-4">
              <div class="flex flex-col">
                <p class="mb-1 text-xs text-gray-500">Ticket Owner :</p>
                <p class="text-xs font-semibold text-red-800"><%= ticket.owner %></p>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Layout -->
    <div class="xl:hidden flex flex-col bg-white border rounded-md mb-6"> <!-- Increased margin-bottom -->
      <div class="py-2 px-4 flex-col flex text-center">
        <img class="mx-auto" src="<%= ticket.qrCodeUrl %>" />
        <p class="font-bold text-lg md:text-3xl">Scan here to check in!</p>
      </div>
      <hr class="border-dashed border-2 border-gray-400" />
      <img src="<%= ticket.imageUrl %>" />
      <!-- Category and Concert Name -->
      <div class="py-2 px-4 flex flex-col text-sm md:text-2xl">
        <p class="self-start font-bold text-gray-500">Category</p>
        <p class="font-bold text-red-800"><%= ticket.category %></p>
        <p class="self-start font-bold text-gray-500 mt-2">Concert Name</p>
        <p class="font-bold text-red-800"><%= ticket.eventName %></p>
      </div>
      <div class="py-2 px-4 flex flex-col text-sm md:text-2xl">
        <!-- Event Details -->
        <p class="self-start font-bold text-gray-500">Start Date</p>
        <p class="font-bold text-red-800"><%= ticket.startDate %></p>
        <p class="self-start font-bold text-gray-500 mt-2">End Date</p>
        <p class="font-bold text-red-800"><%= ticket.endDate %></p>
        <p class="self-start font-bold text-gray-500 mt-2">Location</p>
        <p class="font-bold text-red-800"><%= ticket.location %></p>
      </div>
      <hr class="border-gray-400" />
      <div class="py-2 px-4 flex flex-col text-sm md:text-2xl">
        <p class="self-start font-bold text-gray-500">Powered By</p>
        <img class="mx-auto my-2" src="<%= poweredBy %>" />
        <h3 class="font-bold text-red-800">Eventi </h3> 
      </div>
    </div>
  <% }) %>
</div>

</body>
</html>
